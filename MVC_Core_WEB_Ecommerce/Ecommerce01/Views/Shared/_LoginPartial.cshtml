@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    @*<ul class="nav navbar-nav navbar-right">*@
        @*<div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">*@
       @*<ul class="nav navbar-nav ml-auto">*@
        <ul class="nav navbar-nav ml-auto justify-content-end">
            <li class="nav-item">
                @if (!string.IsNullOrEmpty(Session["Logo"] as string))
                {
                    <img src="@Url.Content(Session["Logo"].ToString())" alt="Image" width="50" height="50" padding-top="5" />
                    @*<img src="image.jpg" width="460" height="345">*@
                }
                else
                {
                    <img src="@Url.Content("~/Content/Defaults/admin_User1.png")" alt="Image" width="100" height="50" padding-top="5" />
                }
            </li>

            <li class="nav-item">
                @Html.ActionLink("Salve " + User.Identity.GetUserName() + "!   ", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link" })
            </li>
            <li>-</li>
            <li class="nav-item">
                <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Disconnetti</a>
            </li>
        </ul>
    }
}
else
{
    @*<ul class="nav navbar-nav navbar-right">  *@
    @*<li class="nav-item">@Html.ActionLink("Registrazione", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>*@
    <ul class="nav navbar-nav ml-auto">
        <li class="nav-item">
            <a href="@Url.Action(
            "Register",
            "Account",
            new { id = "registerLink", @class = "nav-link"  })"  class="btn btn-default btn-md">
                Registrati
                <i aria-hidden="true" class="fas fa-user-plus fa-4x text-white" title="Registrati"></i>
                <span class="sr-only">Registrati</span>
            </a>
        </li>
       
        <li class="nav-item">
            <a href="@Url.Action(
            "Login",
            "Account",
            new { id = "loginLink", @class = "nav-link" })"  class="btn btn-default btn-md">
                Accedi    
                <i aria-hidden="true" class="fas fa-sign-in-alt fa-4x text-white" title="Accedi"></i>
                <span class="sr-only">Accedi</span>
            </a>
        </li>
        @*<li class="nav-item">@Html.ActionLink("Accedi", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>*@
    </ul>
}
