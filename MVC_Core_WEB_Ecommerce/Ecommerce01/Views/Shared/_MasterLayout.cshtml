<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - ECommerce ASP.NET Core MVC</title>
    @* add *@
    @* last add media-query *@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/css/fontawesome-all.css")
    @Styles.Render("~/Content/media-query.css")
    @Styles.Render("~/Content/site.css")
    @*@Mvc.RazorTools.BundleManager.Styles.Render()*@
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <!-- Just an image -->
        <a class="navbar-brand" href="#">
          <img src="~/Content/Defaults/default_Icon.png" width="50" height="50" alt="defaultIcon">
        </a>
        
        @*<a class="navbar-brand" href="#">Ecommerce Base</a>*@
        @* burgher *@
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        @* dropdown *@
        @*  *@
        <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
            <ul class="navbar-nav mr-aut">
                <li class="nav-item active">
                    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    <span class="sr-only">(current)</span>
                </li>
                <li class="nav-item">@Html.ActionLink("Chi siamo", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Contatti", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                @*@if (User.IsInRole("Admin"))
                {*@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Admin-Menu
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            @Html.ActionLink("Aziende", "Index", "Companies", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Città", "Index", "Cities", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Province", "Index", "Provinces", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Regioni", "Index", "Departaments", new { area = "" }, new { @class = "dropdown-item" })

                            @Html.ActionLink("StatiPossibili", "Index", "States", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Utenti", "Index", "Users", new { area = "" }, new { @class = "dropdown-item" })
                        </div>
                        @*<a class="dropdown-item" href="#">Action</a>*@
                    </li>
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-item nav-link dropdown-toggle mr-md-2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Transazioni
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="bd-versions">
                            <li class="dropdown-item">@Html.ActionLink("Acquisti", "Index", "Purchases")</li>
                            <li class="dropdown-item">@Html.ActionLink("Ordini", "Index", "Orders")</li>
                            <li class="dropdown-item">@Html.ActionLink("Vendite", "Index", "Sales")</li>
                        </ul>
                    </li>
                @*}
                @if (User.IsInRole("User"))
                {*@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Store-Menu
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            @Html.ActionLink("Categorie", "Index", "Categories", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Clienti", "Index", "Customers", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Fornitori", "Index", "Suppliers", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Prodotti", "Index", "Products", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Tasse-Sconti", "Index", "Taxes", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Magazzini", "Index", "Warehouses", new { area = "" }, new { @class = "dropdown-item" })
                        </div>
                            @*<a class="dropdown-item" href="#">Action</a>*@
                    </li>
                @*}*@
            </ul>
            @* for login *@
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    @* for footer *@
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Italy - FVG - mobappdev1 -  ECommerce ASP.NET Core MVC</p>
        </footer>
    </div>
    @* add *@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/script.js")
    @RenderSection("scripts", required: false)
</body>
</html>
