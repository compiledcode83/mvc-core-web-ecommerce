@model Bibita
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        
        @*<img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" />*@
        <img src="~/images/@Model.MiniaturaImmagine" alt="Bibita" style="width:300px;height:200px;" />
        @*<img src="@Url.Content("~/Content/themes/construct/images/blog/MyPic2.png")" />*@ 
        @*<img src="@Url.Content(Model.MiniaturaImmagine)" alt="Image" style="width:200px;height:200px;max-width: 100%; height: auto;" />*@
        <div class="caption">
            <h3 class="pull-right">@Model.Prezzo.ToString("c")</h3>
            <h3>
                <a asp-controller="Bibita" asp-action="Details"
                   asp-route-bibitaId="@Model.BibitaId">@Model.Nome</a>
            </h3>
            <p>@Model.PiccolaDescrizione</p>
        </div>
        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success" id="cartButton"
                   asp-controller="Bibita"
                   asp-action="Details"
                   asp-route-bibitaId="@Model.BibitaId.ToString()">
                    Guarda e Acquista
                </a>
            </p>
        </div>
        @*<div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success" id="cartButton" 
