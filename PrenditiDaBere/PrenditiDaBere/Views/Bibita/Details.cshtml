            <div class="card">
                <div class="card-block">

                    <!--Title-->
                    <h1 class="card-title">@Model.Nome</h1>
                    @*<h1 itemprop="name">OPTIMIZE YOUR SLEEP</h1>*@

                    @*<div itemprop="offers" itemscope="" itemtype="http://schema.org/Offer">
                    <meta itemprop="priceCurrency" content="USD">*@

                    @*<link itemprop="availability" href="http://schema.org/InStock">*@

                    <!--Text-->
                    <p class="card-text">@Model.LungaDescrizione.</p>
                    <p>OFF is the first NSF</p>
                    <P>Power OFF is the first NSF Certified for Sport sleep supplement that helps athletes calm down after extended training and games, and ensure a good night’s sleep for maximum performance.</p>
                    <p>sleep supplement that helps.</p>
                    <hr align="left" size="1" width="300" color="red" noshade>
                    <div class="ricorrente_titolo">Abbonati e Risparmia</div>
                    <div class="one_time_div bold_active">
                        <label class="one_time_radio_lbl">
                            <input type="radio" value="0" name="recurring_radio_btn"
                                   class="one_time_radio_btn" checked="checked">
                            <span>Acquista per @Model.Prezzo</span>
                        </label>
                    </div>
                    <div class="recurring_div bold-ro">
                        <label style="display:inline-block" class="recurring_radio_lbl">
                            <input type="radio" value="2" name="recurring_radio_btn" class="mixed_radio_btn">
                            @{var prezzoScontato = (double)@Model.Prezzo * 0.90;}
                            Abbonati &amp; Risparmia 10% (<span class="new_discounted_price">@prezzoScontato</span>)
                        </label>
                        <div class="frequency_div">
                            <div class="frequency_label">
                                Ordine con frequenza:<span style="padding-left:10px">1</span>
                                <input type="hidden" class="frequency_num" value="1"><span style="padding-left:10px">al mese</span>
                                <input type="hidden" class="frequency_type" value="3">
                            </div>
                            <div class="prepaid_div" style="display: none;">
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div></div>
            @*<span class="product-single__sample hide">Order a sample!</span>*@
            <hr align="left" size="1" width="300" color="red" noshade>
            
            <div>        </div>
