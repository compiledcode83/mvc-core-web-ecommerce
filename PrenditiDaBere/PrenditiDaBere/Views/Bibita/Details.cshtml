@using PrenditiDaBere.Data.Models
@model Bibita
<div class="container-fluid marginTop">
    <div class="row">
        <div class="col-sm-6">
            <div class="ttr">
                <img src="~/images/@Model.MiniaturaImmagine" alt="Bibita" class="img-top img-responsive" />
                <div class="card-body">
                    <a href="#">
                        <div class="mask waves-effect waves-light"></div>
                    </a>
                    <h3 class="pull-right card-text">@Model.Prezzo.ToString("c")</h3>
                </div>
                </div>
           </div>
      
